<!DOCTYPE html>
<html lang="zh-Hant">
  <head>
    <%- include ("partials/htmlHeader") %>
    <!-- Web Page Description -->
    <title>haiamcherry | Login</title>
  </head>
  <body>
    <%- include ("partials/headerNav", { user }) %>
    <!--------------- banner ------------------ -->
    <%- include ("partials/banner", { user }) %>
    <main>
      <%- include ("partials/message", { message }) %>
      <div class="content">
        <h3 style="font-size: 2rem">
          Login Here or <a href="/signup"><u>Sign-up</u></a>
        </h3>
        <br />
        <div class="col-md-12" hidden>
          <a
            class="btn"
            style="
              padding: 0.2rem 0.5rem;
              background-color: rgb(7, 7, 7);
              color: rgb(255, 255, 255);
            "
            href="/auth/google"
            ><img
              src="https://img.icons8.com/color/16/000000/google-logo.png"
            />
            Login with Google</a
          >
        </div>
        <br />
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="inputEmail">Email address：</label>
            <input
              class="form-control"
              type="email"
              id="inputEmail"
              placeholder="Enter email"
              name="email"
              required
            />
          </div>
          <br />
          <div class="form-group">
            <label for="inputPassword">Password：</label>
            <input
              class="form-control"
              type="password"
              id="inputPassword"
              placeholder="At least one upper letter and one lower letter"
              name="password"
              required
            />
            <div class="showPwBox">
              <input id="showPw" type="checkbox" onclick="myFunction()" />
              <label for="showPw">Show Password</label>
            </div>
            <script>
              function myFunction() {
                var pw = document.getElementById("inputPassword");
                if (pw.type == "password") {
                  pw.type = "text";
                } else {
                  pw.type = "password";
                }
              }
            </script>
          </div>
          <br />
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </main>
    <%- include ("partials/footer") %>
  </body>
</html>
